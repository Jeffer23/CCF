<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name="com.ccf.persistence.classes.YouthAccount" table="youth_account">
		<meta attribute="class-description">
			This class contains the Youth Account details.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="identity">
			</generator>
		</id>
		<property name="amount" column="amount" type="float" />
		<property name="description" column="description" type="string" />
		<property name="cr_dr" column="cr_dr" type="string" />
		<property name="date" column="date" type="date" />
		<many-to-one name="santha" class="com.ccf.persistence.classes.Santha" column="santha_id"></many-to-one>
	</class>
</hibernate-mapping>