<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ccf.persistence.classes.Santha" table="santha">
		<meta attribute="class-description">
			This class contains the Santha detail.
		</meta>
		<id name="santhaId" type="int" column="santha_id">
			<generator class="native" />
		</id>
		<many-to-one name="member" class="com.ccf.persistence.classes.Member"
			fetch="join">
			<column name="member_id" not-null="true" />
		</many-to-one>
		<!-- <property name="memberId" column="member_id" type="int"/> -->
		<property name="paidDate" column="paid_date" type="date" />
		<property name="paidForDate" column="paid_for_date" type="date" />
		<property name="harvestFestival" column="harvest_festival"
			type="float" />
		<property name="missionary" column="missionary" type="float" />
		<property name="mensFellowship" column="mens_fellowship"
			type="float" />
		<property name="womensFellowship" column="womens_fellowship"
			type="float" />
		<property name="educationHelp" column="education_help" type="float" />
		<property name="primarySchool" column="primary_school" type="float" />
		<property name="youth" column="youth" type="float" />
		<property name="poorHelp" column="poor_help" type="float" />
		<property name="churchRenovation" column="church_renovation"
			type="float" />
		<property name="graveyard" column="graveyard" type="float" />
		<property name="bagOffer" column="bag_offer" type="float" />
		<property name="thanksOffer" column="thanks_offer" type="float" />
		<property name="sto" column="sto" type="float" />
		<property name="subscriptionAmount" column="subscriptionAmount" type="float" />
		<property name="total" column="total" type="float" />
		
		<set name="pcAccounts" cascade="all" lazy="true">
			<key>
				<column name="santha_id"></column>
			</key>
			<one-to-many class="com.ccf.persistence.classes.PCAccount" />
		</set>
		
		<set name="missionaryAccounts" cascade="all" lazy="true">
			<key>
				<column name="santha_id" not-null="false" unique="true"></column>
			</key>
			<one-to-many class="com.ccf.persistence.classes.MissionaryAccount"/>
		</set>
	
		
		<set name="specialThanksOfferingAccounts" cascade="all" lazy="true">
			<key>
				<column name="santha_id"></column>
			</key>
			<one-to-many class="com.ccf.persistence.classes.SpecialThanksOfferingAccount" />
		</set>
		
		<set name="mensAccounts" cascade="all" lazy="true">
			<key>
				<column name="santha_id" unique="true"></column>
			</key>
			<one-to-many class="com.ccf.persistence.classes.MensAccount" />
		</set>
		
		<set name="womensAccounts" cascade="all" lazy="true">
			<key>
				<column name="santha_id" unique="true"></column>
			</key>
			<one-to-many class="com.ccf.persistence.classes.WomensAccount" />
		</set>
		
		<set name="youthAccounts" cascade="all" lazy="true">
			<key>
				<column name="santha_id" unique="true"></column>
			</key>
			<one-to-many class="com.ccf.persistence.classes.YouthAccount" />
		</set>
		
		<set name="graveyardAccounts" cascade="all" lazy="true">
			<key>
				<column name="santha_id" unique="true"></column>
			</key>
			<one-to-many class="com.ccf.persistence.classes.GraveyardAccount" />
		</set>
		
		<set name="primarySchoolAccounts" cascade="all" lazy="true">
			<key>
				<column name="santha_id" unique="true"></column>
			</key>
			<one-to-many class="com.ccf.persistence.classes.PrimarySchoolAccount" />
		</set>
		
		
	</class>
</hibernate-mapping>