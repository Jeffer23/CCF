<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">admin</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ccf</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <mapping resource="com/ccf/hibernate/family.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/member.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/santha.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/serviceOffering.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/pcAccount.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/missionaryAccount.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/mensAccount.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/womensAccount.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/sundaySchoolAccount.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/youthAccount.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/specialThanksOfferingAccount.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/graveyardAccount.hbm.xml"></mapping>
        <mapping resource="com/ccf/hibernate/primarySchoolAccount.hbm.xml"></mapping>
        
    </session-factory>
</hibernate-configuration>