<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>
<?import eu.schudt.javafx.controls.calendar.DatePicker?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
	minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.ccf.controller.AddIncomeController">
	<children>
		<AnchorPane prefHeight="775.0" prefWidth="1280.0"
			style="-fx-background-image: url('com/ccf/images/background.gif');-fx-background-repeat:repeat;">
			<children>
				<ImageView fitHeight="100.0" fitWidth="100.0" layoutX="1047.0"
					pickOnBounds="true" preserveRatio="true"
					style="-fx-box-shadow: 10px 10px 5px #888888;">
					<image>
						<Image url="/com/ccf/images/logo.png" />
					</image>
				</ImageView>
				<Button layoutX="687.0" layoutY="500.0" mnemonicParsing="false"
					onAction="#saveIncome" prefHeight="22.0" prefWidth="91.0"
					style="-fx-background-color: #0077cc; -fx-background-radius: 15;"
					text="Save" textFill="WHITE">
					<font>
						<Font name="Arial Rounded MT Bold" size="14.0" />
					</font>
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
				</Button>
				<Label alignment="CENTER" contentDisplay="CENTER" layoutX="388.0"
					layoutY="67.0" prefHeight="66.0" prefWidth="533.0" text="Add Income"
					textAlignment="CENTER">
					<font>
						<Font name="Times New Roman" size="36.0" />
					</font>
				</Label>
				<Label fx:id="message" layoutX="844.0" layoutY="327.0"
					prefHeight="40.0" prefWidth="411.0" textFill="BLACK">
					<font>
						<Font name="Comic Sans MS" size="20.0" />
					</font>
				</Label>
				<GridPane fx:id="grid" layoutX="475.0" layoutY="159.0" prefHeight="286.0"
					prefWidth="336.0">
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" maxWidth="149.0"
							minWidth="10.0" prefWidth="97.0" />
						<ColumnConstraints hgrow="SOMETIMES" maxWidth="215.0"
							minWidth="10.0" prefWidth="215.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints maxHeight="185.0" minHeight="10.0"
							prefHeight="100.0" vgrow="SOMETIMES" />
						<RowConstraints maxHeight="148.0" minHeight="10.0"
							prefHeight="30.0" vgrow="SOMETIMES" />
						<RowConstraints maxHeight="156.0" minHeight="10.0"
							prefHeight="30.0" vgrow="SOMETIMES" />
						<RowConstraints maxHeight="95.0" minHeight="10.0"
							prefHeight="30.0" vgrow="SOMETIMES" />
						<RowConstraints maxHeight="48.0" minHeight="10.0"
							prefHeight="30.0" vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="34.0" prefWidth="120.0" style="-fx-background-color: #D4D4FC;"
							text="Amount : ">
							<font>
								<Font name="Arial Rounded MT Bold" size="14.0" />
							</font>
						</Label>
						<TextField fx:id="amount" alignment="CENTER" prefHeight="34.0"
							prefWidth="150.0" promptText="INR" GridPane.columnIndex="1" />
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="34.0" prefWidth="120.0" style="-fx-background-color: #D4D4FC;"
							text="Account : " GridPane.rowIndex="2">
							<font>
								<Font name="Arial Rounded MT Bold" size="14.0" />
							</font>
						</Label>
						<ChoiceBox fx:id="accounts" prefHeight="36.0" prefWidth="219.0"
							GridPane.columnIndex="1" GridPane.rowIndex="2" />
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="104.0" prefWidth="121.0" style="-fx-background-color: #D4D4FC;"
							text="Reason : " GridPane.rowIndex="1">
							<font>
								<Font name="Arial Rounded MT Bold" size="14.0" />
							</font>
						</Label>
						<TextArea fx:id="reason" prefHeight="200.0" prefWidth="150.0"
							wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="34.0" prefWidth="120.0" style="-fx-background-color: #D4D4FC;"
							text="Account Type : " GridPane.rowIndex="3">
							<font>
								<Font name="Arial Rounded MT Bold" size="14.0" />
							</font>
						</Label>
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="34.0" prefWidth="120.0" style="-fx-background-color: #D4D4FC;"
							text="Cheque Date :" GridPane.rowIndex="4">
							<font>
								<Font name="Arial Rounded MT Bold" size="14.0" />
							</font>
						</Label>
						<Label alignment="CENTER" contentDisplay="CENTER"
							prefHeight="34.0" prefWidth="120.0" style="-fx-background-color: #D4D4FC;"
							text="Cheque Number :" GridPane.rowIndex="5">
							<font>
								<Font name="Arial Rounded MT Bold" size="14.0" />
							</font>
						</Label>
						<HBox prefHeight="34.0" prefWidth="150.0"
							style="-fx-background-color: #fff;" GridPane.columnIndex="1"
							GridPane.rowIndex="3">
							<children>
								<RadioButton fx:id="cash" onAction="#onCashButtonPressed"
									onMouseClicked="#onCashButtonPressed" mnemonicParsing="false"
									style="-fx-padding: 17px 0px 0px 30px;" text="Cash" selected="true">
								</RadioButton>
								<RadioButton fx:id="cheque" onAction="#onChequeButtonPressed"
									onMouseClicked="#onChequeButtonPressed" mnemonicParsing="false"
									style="-fx-padding: 17px 0px 0px 25px;" text="Cheque">
								</RadioButton>
							</children>
						</HBox>
						<DatePicker fx:id="chequeDate" prefHeight="34.0" prefWidth="150.0"
							GridPane.columnIndex="1" GridPane.rowIndex="4"
									stylesheets="/com/ccf/css/DatePicker.css" style="-fx-padding: 5px 0px 0px 0px; min-height:34px;" />
						<TextField fx:id="chequeNumber" prefHeight="34.0" prefWidth="10.0"
							GridPane.columnIndex="1" GridPane.rowIndex="5" />
					</children>
				</GridPane>
				<Button layoutX="532.0" layoutY="500.0" mnemonicParsing="false"
					onAction="#clear" prefHeight="22.0" prefWidth="91.0"
					style="-fx-background-color: #0077cc; -fx-background-radius: 15;"
					text="Clear" textFill="WHITE">
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
					<font>
						<Font name="Arial Rounded MT Bold" size="14.0" />
					</font>
				</Button>

			</children>
		</AnchorPane>
	</children>
</VBox>
