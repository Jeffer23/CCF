<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.ccf.persistence.classes.BankSundaySchoolAccount" table="bank_sunday_school_account">
		<meta attribute="class-description">
			This class contains the Sunday School account details.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="identity"/>
		</id>
		<property name="amount" column="amount" type="float" />
		<property name="description" column="description" type="string" />
		<property name="cr_dr" column="cr_dr" type="string" />
		<property name="date" column="date" type="date" />
		<many-to-one name="serviceOffering" class="com.ccf.persistence.classes.ServiceOffering" column="service_id"></many-to-one>
		<set name="cheques" fetch="join" table="cheque_bank_service_offering" cascade="all" lazy="true" inverse="false">
			<key>
				<column name="bank_service_offering_account_id"></column>
			</key>
			<many-to-many entity-name="com.ccf.persistence.classes.Cheque" >
				<column name="cheque_id"></column>
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>